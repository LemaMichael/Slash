# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Slash' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    
    # Pods for Slash
    
    # Charts (Beautiful charts for iOS/tvOS/OSX)
    # https://github.com/danielgindi/Charts
    pod 'Charts'
    
    # SwiftEntryKit (SwiftEntryKit is a banner presenter library for iOS.)
    pod 'SwiftEntryKit' 
    
    # GDAXSocketSwift (Unofficial Swift implementation of GDAX Websocket API)
    pod 'GDAXSocketSwift'
    pod 'Starscream'
    
    # GDAXKit (Client Library for GDAX.com's API)
    pod 'GDAXKit'
    
    # CryptoCompKit
    pod 'CryptoCompKit'

	pod 'SwiftLint'
end
